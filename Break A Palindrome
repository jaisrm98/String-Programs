package coding;

public class Break_A_Palindrome {

	public static void main(String[] args) {
		String str="aba";
		char arr[]=str.toCharArray();
		for(int i=0;i<arr.length/2;i++)
		{
			if(arr[i]!='a')
			{
				arr[i]='a';
				System.out.println(String.valueOf(arr));                   // convert  variable of other data type to String
				break;
			}
		}
		arr[arr.length-1]='b';
		System.out.println(String.valueOf(arr));
	}

}

Output: abb
